extends layout

block content
  h1= title
  
  - let foods = results
    div(class="container-fluid")
        dic(class="row align-items-start")
            each item,index in foods 
                div(class="col-sm-2" onclick=`buy(${index})`) foodtype:#{item.foodtype}, size:#{item.size}, price:#{item.cost}
    script. 
        function buy(index){
            alert(`You purchased item ${index+1}`);
        }
